{
  "name": "node-ts-skeleton",
  "version": "1.0.1",
  "description": "This is a template to start developing a REST API with Node.js (Express), TypeScript, Eslint, Prettier, Husky, etc.",
  "author": "Borja Paz RodrÃ­guez (@borjapazr)",
  "license": "MIT",
  "keywords": [
    "node",
    "typescript",
    "eslint",
    "husky",
    "prettier",
    "docker",
    "makefile"
  ],
  "repository": "https://github.com/borjapazr/express-typescript-skeleton",
  "main": "dist/index.js",
  "files": [
    "dist",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.7.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "run-s build:*",
    "build:compile": "rimraf dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json --silent",
    "build:assets": "copyfiles ---error --up 1 src/**/*.yml dist/ && copyfiles --error -f package*.json dist/",
    "start": "cross-env NODE_ENV=production npm run build && node ./dist/index.js",
    "check:types": "tsc --pretty --noEmit",
    "check:format": "prettier --check .",
    "check:lint": "eslint . --ext .js,.ts --color",
    "check:spelling": "cspell \"{README.md,TODO.md,.github/*.md,src/**/*.ts}\"",
    "fix:format": "prettier --check --write --ignore-unknown .",
    "fix:lint": "npm run check:lint -- --fix",
    "check:staged": "lint-staged",
    "test": "cross-env NODE_ENV=test jest --verbose --colors --detectOpenHandles --runInBand",
    "test:unit": "npm run test -- --testPathPattern=unit",
    "test:int": "npm run test -- --testPathPattern=integration",
    "test:e2e": "npm run test -- --testPathPattern=e2e",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage --silent",
    "coverage:view": "http-server -p 9003 ./coverage/lcov-report -o",
    "commit": "cz",
    "version": "standard-version -t",
    "reset-hard": "git clean -dfx && git reset --hard && npm install",
    "prepare-release": "run-s reset-hard version",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv-defaults": "^2.0.1",
    "@types/express": "^4.17.13",
    "@types/figlet": "^1.5.4",
    "@types/jest": "^27.0.3",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/luxon": "^2.0.8",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.5",
    "@types/node-emoji": "^1.8.1",
    "@types/source-map-support": "^0.5.4",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.9.0",
    "commitizen": "^4.2.4",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "cspell": "^5.14.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonarjs": "^0.10.0",
    "eslint-plugin-unicorn": "^39.0.0",
    "http-server": "^14.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jest-extended": "^1.2.0",
    "jest-sonar": "^0.2.12",
    "lint-staged": "^12.1.4",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "tsc-alias": "^1.5.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@types/swagger-jsdoc": "^6.0.1",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "cookie-parser": "^1.4.6",
    "dotenv-defaults": "^3.0.0",
    "endent": "^2.1.0",
    "express": "^4.17.2",
    "figlet": "^1.5.2",
    "helmet": "^4.6.0",
    "http-graceful-shutdown": "^3.1.5",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "luxon": "^2.3.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "mysql": "^2.18.1",
    "node-emoji": "^1.11.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "source-map-support": "^0.5.21",
    "strip-json-comments": "^3.1.1",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.2.41",
    "typeorm-naming-strategies": "^2.0.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  }
}
